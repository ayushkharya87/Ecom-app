{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "NodeNext",                               
    "rootDir": "src",                                  
    "moduleResolution": "Node10",                     
    "outDir": "dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
